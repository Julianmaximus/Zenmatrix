<%= simple_form_for(@post, html: { class: 'post-form' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.input :title, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :body, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.association :category, prompt: 'Select a category', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :image, as: :file, input_html: { class: 'form-control-file' } %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
