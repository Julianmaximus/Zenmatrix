<p style="color: green" class="notice"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <div class="category">
      <%= render category %>
      <p class="category-link">
        <%= link_to "Show this category", category %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New category", new_category_path, class: "new-category-link" %>
